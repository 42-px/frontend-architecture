{
  "compilerOptions": {
    "target": "esnext",
    "module": "es2015",
    "moduleResolution": "node",
    "strict": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "jsx": "react",
    "experimentalDecorators": true,
    "paths": {
      "@/*": ["./src/*"],
    },
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
